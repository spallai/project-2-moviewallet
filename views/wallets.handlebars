<ul class="movies">
    {{!-- {{#each movies}}
    <li class="list-movie-item">
        {{#if title}}
        title: <strong>{{title}}</strong>
        {{/if}}
        genre:{{genre}}
        plot: {{plot}}
        actors:{{actors}}
        <img class="movieposter" src="{{imgURL}}" />
        {{#if watched}}
        <p>watched</p>
        <hr>
        {{/if}}
    </li>
    {{/each}} --}}

    {{!-- if yes movies --}}
    <ul class="yes-movies">
        {{#if yes}}
        <div class="yes">
            <h2>Yes</h2>
            <p>Because you need to watch this at some point.</p>
        </div>
        <hr>
        <hr>
        {{#each movies.1}}
        <li class="list-movie-item">
            {{#if title}}
            title: <strong>{{title}}</strong>
            {{/if}}
            genre:{{genre}}
            plot: {{plot}}
            actors:{{actors}}
            <img class="movieposter" src="{{imgURL}}" alt="{{name}}" />
            <img src="{{img}}" alt="{{name}}" />
            {{#if watched true}}
            <p>watched</p>
            <hr>
        </li>
        {{/each}}
    </ul>


    {{!-- if maybe movies --}}
    <ul class="maybe-movies">
        {{#if yes}}
        <div class="maybe">
            <h2>Maybe</h2>
            <p>Perhaps on a rainy day...</p>
        </div>
        <hr>
        <hr>
        {{#each movies.3}}
        <li class="list-movie-item">
            {{#if title}}
            title: <strong>{{title}}</strong>
            {{/if}}
            genre:{{genre}}
            plot: {{plot}}
            actors:{{actors}}
            <img class="movieposter" src="{{imgURL}}" alt="{{name}}" />
            <img src="{{img}}" alt="{{name}}" />
            {{#if watched true}}
            <p>watched</p>
            <hr>
        </li>
        {{/each}}
    </ul>

    {{!-- if no movies --}}
    <ul class="no-movies">
        {{#if yes}}
        <div class="no">
            <h2>No</h2>
            <p>Umm, Thank you, next!</p>
        </div>
        <hr>
        <hr>
        {{#each movies.2}}
        <li class="list-movie-item">
            {{#if title}}
            title: <strong>{{title}}</strong>
            {{/if}}
            genre:{{genre}}
            plot: {{plot}}
            actors:{{actors}}
            <img class="movieposter" src="{{imgURL}}" alt="{{name}}" />
            <img src="{{img}}" alt="{{name}}" />
            {{#if watched true}}
            <p>watched</p>
            <hr>
        </li>
        {{/each}}
    </ul>

    {{!-- if playlists --}}
    <ul class="playlists">
        {{#if playlists}}
        <div class="playlists">
            <h2>Playlists</h2>
        </div>
        <hr>
        <hr>
        {{#each playlist}}
        <li class="list-movie-item">
            {{#if title}}
            title: <strong>{{title}}</strong>
            {{/if}}
            genre:{{genre}}
            plot: {{plot}}
            actors:{{actors}}
            <img class="movieposter" src="{{imgURL}}" alt="{{name}}" />
            <img src="{{img}}" alt="{{name}}" />
            {{#if watched true}}
            <p>watched</p>
            <hr>
        </li>
        {{/each}}
    </ul>

